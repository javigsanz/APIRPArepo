@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="es">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - UNED</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <!-- -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.4.1.slim.min.js"></script>
</head>
<body>
    <div align="center" class="panel_body ">
        <header class="container" role="banner">
            <div class="row page-header">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                    <a href="http://www.uned.es" title="Acceso a página Principal de la UNED">
                        <img src="~/Images/UNEDlogo.png" class="img-responsive pull-left" alt="Logo Universidad Nacional a Distancia" width="160" height="80" />
                    </a>
                    <h1 class="text-center">
                        <span>Servicio de restauración de datos de cuentas</span>
                    </h1>
                </div>
            </div>
        </header>

        <!-- <form action="FormDniPass" method="get"> -->
        <form action="FormPass" method="get">
            <p>SI HA PERDIDO ACCESO A SU CUENTA DE LA UNED PULSE AQUÍ PARA RESTAURAR SU CONTRASEÑA</p>
            <div class="visible-xs">
                <button type="submit" class="btn btn-default btn-primary btn-block">RESET PASS</button>
            </div>
            <div class="hidden-xs">
                <button type="submit" class="btn btn-default btn-primary">RESET PASS</button>
            </div>
        </form>

    </div>
    
</body>
</html>







